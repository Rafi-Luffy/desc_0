{
	"name": "ai-chat-assistant",
	"displayName": "AI Chat Assistant",
	"description": "A smart chat assistant for VS Code with code generation, file analysis, and workspace context awareness.",
	"version": "1.0.0",
	"publisher": "your-publisher-name",
	"engines": {
		"vscode": "^1.85.0"
	},
	"categories": [
		"Other",
		"Machine Learning",
		"Snippets"
	],
	"keywords": [
		"ai",
		"chat",
		"assistant",
		"code generation",
		"gemini",
		"productivity"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "ai-chat-assistant.setApiKey",
				"title": "AI Chat: Set Gemini API Key",
				"icon": "$(key)"
			},
			{
				"command": "ai-chat-assistant.generateCode",
				"title": "AI Chat: Generate Code",
				"icon": "$(code)"
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "ai-chat-assistant-sidebar",
					"title": "AI Chat Assistant",
					"icon": "$(comment-discussion)"
				}
			]
		},
		"views": {
			"ai-chat-assistant-sidebar": [
				{
					"type": "webview",
					"id": "aiChatAssistantView",
					"name": "Chat",
					"icon": "$(comment-discussion)",
					"contextualTitle": "AI Chat Assistant"
				}
			]
		},
		"menus": {
			"commandPalette": [
				{
					"command": "ai-chat-assistant.setApiKey",
					"when": "true"
				},
				{
					"command": "ai-chat-assistant.generateCode",
					"when": "true"
				}
			],
			"editor/context": [
				{
					"command": "ai-chat-assistant.generateCode",
					"group": "1_modification",
					"when": "editorTextFocus"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile && npm run build:webview",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"build:webview": "cd webview-ui && npm install && npm run build",
		"watch:webview": "cd webview-ui && npm run build -- --watch",
		"package": "vsce package",
		"publish": "vsce publish"
	},
	"devDependencies": {
		"@types/mocha": "^10.0.6",
		"@types/node": "18.x",
		"@types/vscode": "^1.85.0",
		"@typescript-eslint/eslint-plugin": "^6.15.0",
		"@typescript-eslint/parser": "^6.15.0",
		"eslint": "^8.56.0",
		"typescript": "^5.3.3"
	},
	"dependencies": {
		"@google/generative-ai": "^0.24.1"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/your-username/ai-chat-assistant.git"
	},
	"bugs": {
		"url": "https://github.com/your-username/ai-chat-assistant/issues"
	},
	"homepage": "https://github.com/your-username/ai-chat-assistant#readme",
	"license": "MIT"
}